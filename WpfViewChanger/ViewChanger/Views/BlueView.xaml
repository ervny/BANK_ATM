<UserControl x:Class="ViewChanger.Views.BlueView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ViewChanger.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="White">

        <StackPanel Orientation="Vertical">

            <TextBlock x:Name="current_username" Width=" 200" Height="100" Margin="10,10,10,10" FontSize="50" />
            <Button x:Name="show_amount" Content="SHOW AMOUNT" Width="200" Height="100" Margin="10,10,10,10" Click="show_amount_Click"/>

        </StackPanel>
    </Grid>
</UserControl>
